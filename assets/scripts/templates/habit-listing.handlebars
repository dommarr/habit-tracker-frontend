{{#each habits as |habit|}}
  {{log habit}}
  <section data-id="{{habit.id}}">
    <h6>Habit:</h6>
    <h3>
      {{limit habit.habit_title 15}}
    </h2>
    <h6>Streak:</h6>
    <p>
      {{#if habit.streak}}
        {{habit.streak}}
      {{else}}
        Streak not started.
      {{/if}}
    </p>
    <button class="btn btn-danger deleteHabitButton" data-id="{{habit.id}}">Delete Habit</button>
    <button class="btn btn-primary updateHabitButton" data-id="{{habit.id}}">Edit Habit</button>
  </section>

{{/each}}
