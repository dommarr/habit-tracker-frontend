{{#each habits as |habit|}}
  {{log habit}}

<div class="card-columns">
<div class="card bg-primary text-white text-center p-3 tile" data-id="{{habit.id}}">
  <div class="card-body">
     <h5 class="card-title">{{limit habit.habit_title 15}}</h5>
     <p class="card-text">{{habit.streak}}</p>
   </div>
   <button type="button" data-id="{{habit.id}}" data-toggle="modal" data-target=".settings-modal" class="btn btn-primary settings">?</button>
   <button class="btn btn-primary streakButton" data-id="{{habit.id}}" data-streak="{{habit.streak}}" data-title="{{habit.habit_title}}">+</button>
 </div>
</div>

<div class="modal settings-modal" id="settings-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Settings</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hi$('body').on('click', '.settings', onSettings)dden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="edit-habit">
         <input type="text" name="habit[habit_title]" placeholder="Edit habit title...">
         <button class="btn btn-secondary">Edit Habit</button>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary deleteHabitButton" data-dismiss="modal">Delete Habit</button>
      </div>
    </div>
  </div>
</div>

{{/each}}
